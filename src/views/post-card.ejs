<table
  style="background-color: white; margin: 0 auto"
  width="600px"
  cellpadding="0"
  cellspacing="0"
  border="0"
>
  <tr>
    <td style="text-align: center; padding: 10px" align="center">
      <img
        src="<%= post.mainImage %>"
        alt="post-image"
        style="width: 600px; height: 270px; object-fit: cover"
      />
      <h2 style="color: black;"><%= post.title %></h2>
      <p style="padding-bottom: 10px;color: black;"><%= post.content.substring(38, 400) %></p>

      <p>
        <a
          href="#"
          style="
            text-align: center;
            color: white;
            background-color: brown;
            width: 300px;
            height: 220px;
            padding: 16px;
            border-radius: 30px;
            font-size: 16px;
            border: 2px solid black;
            text-decoration: none;
            text-transform: capitalize;
          "
          >ver mais</a
        >
      </p>
    </td>
  </tr>
</table>
